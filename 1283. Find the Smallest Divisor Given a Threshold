class Solution {
    public boolean possible(int nums[], int threshold, int n, int mid){
        int count = 0;
        for(int i=0; i<n; i++){
            count += Math.ceil((double)nums[i]/mid);
        }
        return count <= threshold;
    }       
    public int smallestDivisor(int[] nums, int threshold) {
        int low = 1;
        int n = nums.length;
        int high = 0;
        int ans = -1;
        for(int i=0; i<n; i++){
            high = Math.max(high, nums[i]);
        }

        while(low <= high){
            int mid = (low+high)/2;
            if(possible(nums, threshold, n, mid)){
                ans = mid;
                high = mid-1;
            }
            else{
                low = mid+1;
            }
        }
        return ans;
    }
}
