class Solution {
    public int minimumTotal(List<List<Integer>> triangle) {
        int n = triangle.size();
        
        // Start from the second last row
        for (int row = n - 2; row >= 0; row--) {
            for (int col = 0; col < triangle.get(row).size(); col++) {
                int down = triangle.get(row + 1).get(col);
                int diag = triangle.get(row + 1).get(col + 1);
                int best = Math.min(down, diag) + triangle.get(row).get(col);
                // update current cell
                triangle.get(row).set(col, best);
            }
        }
        
        // Answer will be at the top
        return triangle.get(0).get(0);
    }
}
