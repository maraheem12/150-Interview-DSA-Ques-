class Solution {
    public static int check(int piles[], int mid, int n){
        int hours = 0;
        for(int i=0; i<n; i++){
            hours += Math.ceil((double)piles[i]/mid); 
        }
        return hours;
    }
    public int minEatingSpeed(int[] piles, int h) {
        int n = piles.length;
        int low = 1;
        int high = 0;
        for(int i=0;i<n;i++){
            high = Math.max(high, piles[i]);
        }
        while(low <= high){
            int mid = (low+high)/2;

            int hours = check(piles,mid,n);
            if(hours <= h){
                high = mid-1;
            }
            else{
                low = mid+1;
            }
        }
        return low;
    }
}
