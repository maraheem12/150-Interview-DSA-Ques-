class Solution {
    public boolean possible(int weights[], int days, int n, int mid) {
    int curr = 1;
    int load = 0;

    for (int i = 0; i < n; i++) {
        if (weights[i] > mid) return false;

        if (load + weights[i] <= mid) {
            load += weights[i];
        } else {
            curr++;
            load = weights[i];
        }
    }
    return curr <= days;
}

    public int shipWithinDays(int[] weights, int days) {
        int low = 0;
        int n = weights.length;
        int high = 0;
        int ans = -1;
        for(int i=0; i<n; i++){
            low = Math.max(low, weights[i]);
            high += weights[i];
        }

        while(low <= high){
            int mid = (low+high)/2;
            if(possible(weights, days, n, mid)){
                ans = mid;
                high = mid-1;
            }
            else{
                low = mid+1;
            }
        }
        return ans;
    }
}
