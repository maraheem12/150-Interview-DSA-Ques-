class Solution {
    public int longestConsecutive(int[] nums) {

        int longest = 0;
        HashSet<Integer> set = new HashSet<>();
        for(int num: nums){
            set.add(num);
        }

        for(int num: set){

            int count = 1;
            if(!set.contains(num-1)){
                int current = num;
                while(set.contains(current+1)){
                    count++;
                    current++;
                }
                longest = Math.max(longest,count);
            }
        }
        return longest;
    }
}
